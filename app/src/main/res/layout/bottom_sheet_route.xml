<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/route_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="340dp"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:visibility="invisible"
    app:behavior_hideable="true"
    app:behavior_peekHeight="80dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <Button
        android:id="@+id/hide_route_bottom_sheet_butt"
        android:layout_width="160dp"
        android:layout_height="56dp"

        android:layout_gravity="right"
        android:layout_marginBottom="48dp"


        android:selectAllOnFocus="false"
        android:text="Close"
        android:textAllCaps="false"
        android:textColor="#064264"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/basic_origin_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/basic_route_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="route not found"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/basic_dest_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

</LinearLayout>